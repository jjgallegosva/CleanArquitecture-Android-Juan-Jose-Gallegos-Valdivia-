<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_movie">
    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.example.moviesapp.ui.movies.MoviesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_movies"
        >
        <action
            android:id="@+id/action_navigation_movie_to_navigation_detailsmovie"
            app:destination="@id/navigation_detailmovie" />
    </fragment>
    <fragment
        android:id="@+id/navigation_detailmovie"
        android:name="com.example.moviesapp.ui.detailsmovie.DetailsMovieFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_details_movie" />
</navigation>